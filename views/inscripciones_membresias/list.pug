extends ../templates/layout

block content
    div(class="container") 
        h3 Listado de inscripciones a membresías
        table(class="table table-striped")
            thead 
                tr
                    th ID
                    th Cliente ID
                    th Membresía ID
                    th Fecha de Inicio
                    th Fecha de Fin
                    th Estado
                    th Borrar
                    th Editar
            tbody 
                each inscripcion in inscripcionesMembresias 
                    tr 
                        td=inscripcion.inscripcion_id
                        td=inscripcion.cliente_id
                        td=inscripcion.membresia_id
                        td=inscripcion.fecha_inicio
                        td=inscripcion.fecha_fin
                        td=inscripcion.estado
                        td 
                            a(href=`/inscripciones_membresias/del/${inscripcion.inscripcion_id}`, class="btn btn-danger btn-sm") Borrar
                        td 
                            a(href=`/inscripciones_membresias/edit/${inscripcion.inscripcion_id}`, class="btn btn-primary btn-sm") Editar
        p 
            a(href="/inscripciones_membresias/add", class="btn btn-success") Añadir una nueva inscripción a membresía