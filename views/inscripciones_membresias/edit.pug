extends ../templates/layout

block content 
    h3 Editar inscripción a membresía
    form(action=`/inscripciones_membresias/edit/${inscripcion.inscripcion_id}`, method="post", class="needs-validation", novalidate)
        .mb-3
            label(for="cliente_id", class="form-label") Cliente:
            input(type="number", name="cliente_id", value=`${inscripcion.cliente_id}`, class="form-control", required=true)
        .mb-3
            label(for="membresia_id", class="form-label") Membresía:
            input(type="number", name="membresia_id", value=`${inscripcion.membresia_id}`, class="form-control", required=true)
        .mb-3
            label(for="fecha_fin", class="form-label") Fecha de fin:
            input(type="date", name="fecha_fin", value=`${inscripcion.fecha_fin}`, class="form-control", required=true)
        .mb-3
            label(for="estado", class="form-label") Estado:
            select(name="estado", class="form-select", required=true)
                option(value="activa", selected=inscripcion.estado == "activa") Activa
                option(value="inactiva", selected=inscripcion.estado == "inactiva") Inactiva
        button(type="submit", class="btn btn-primary") Guardar
        a(href="/inscripciones_membresias", class="btn btn-secondary") Cancelar
