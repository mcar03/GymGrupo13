extends ../templates/layout

block content
  h1 Agregar Nuevo Entrenador
  form(action="/entrenadores/add", method="POST", class="needs-validation", novalidate)
    .mb-3
      label(for="nombre", class="form-label") Nombre
      input(type="text", name="nombre", id="nombre", class="form-control", required=true)
    .mb-3
      label(for="apellido", class="form-label") Apellido
      input(type="text", name="apellido", id="apellido", class="form-control", required=true)
    .mb-3
      label(for="especialidad", class="form-label") Especialidad
      input(type="text", name="especialidad", id="especialidad", class="form-control")
    .mb-3
      label(for="salario", class="form-label") Salario
      input(type="number", name="salario", id="salario", step="0.01", class="form-control")
    .mb-3
      label(for="fecha_contratacion", class="form-label") Fecha de Contrataci√≥n
      input(type="date", name="fecha_contratacion", id="fecha_contratacion", class="form-control")
    button(type="submit", class="btn btn-primary") Guardar
    a(href="/entrenadores", class="btn btn-secondary") Volver a la lista